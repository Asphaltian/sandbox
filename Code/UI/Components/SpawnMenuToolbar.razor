@using Sandbox;
@using Sandbox.UI;
@inherits Panel

<root>
    @if ( Left != null )
    {
        <div class="left">@Left</div>
    }

    <div class="body menuinner">@Body</div>

    <div class="right">

        <div class="iconsize">
            <IconPanel Text="view_compact"></IconPanel>
            <IconPanel Text="view_module"></IconPanel>
            <IconPanel Text="grid_view"></IconPanel>
        </div>
    </div>
</root>

@code
{

    public RenderFragment Left { get; set; }
    public RenderFragment Body { get; set; }

}
